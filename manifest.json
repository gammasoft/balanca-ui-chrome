{
    "name": "γBalança",
    "description": "Integração com o Gammasoft Balança",
    "version": "1.0.0",
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "css": [
            "css/bootstrap.min.css"
        ],
        "js": [
            "js/jquery.min.js",
            "js/bootstrap.min.js",
            "content_script.js"
        ]
    }],
    "web_accessible_resources": [
        "html/obterPesoModal.html"
    ],
    "permissions": [
        "http://*/*",
        "https://*/*",
        "contextMenus",
        "tabs"
    ],
    "background": {
        "scripts": [
            "js/jquery.min.js",
            "js/bootstrap.min.js",
            "background.js"
        ]
    },
    "manifest_version": 2
}